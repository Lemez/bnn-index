<script type="text/javascript">
  // $(' ').addClass('btn-highlight'); // fire it up

  $('td.award_buttons').on('click', function(){
    $this = $(this);
    $this.addClass('btn-highlight');
    $this.siblings('td').removeClass('btn-highlight');
    var idName = $this.attr('id');
    
    $('#champion_neg' + idName).show();
    $('#champion_neg' + idName).siblings('div').hide();
  });

    $('td.trophy_buttons').on('click', function(){
    $this = $(this);
    $this.addClass('btn-highlight');
    $this.siblings('td').removeClass('btn-highlight');

    var idName = $this.attr('id');
    
    $('#champion_neg' + idName).show();
    $('#champion_neg' + idName).siblings('div').hide();
  });
</script>