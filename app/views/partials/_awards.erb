 <div id='shame'>
  <table id='button-table'>
            <tbody>
              <tr>
                <td id='_ever' class='award_buttons btn-highlight'>All Time</td>
                <td id='_month' class='award_buttons'>Month </td>
                <td id='_week' class='award_buttons'>Week</td>               
              </tr>
            </tbody>
    </table>
      <table id='button-table-data'>
            <tbody>
              <tr>
                <td id='_stories' class='trophy_buttons btn-highlight'>Stories </td> 
                <td id='_trophies' class='trophy_buttons'>Trophies</td>        
              </tr>
            </tbody>
    </table>

 


      <div id='champion_neg_ever' class='champion ever'>
        <!--  <span class='neg_award_headline award'>Misery Guts award</span><br/> -->
          
         <h2 id='top_logo'><%= image_tag(LOGOS[@story_neg_ever.first.source], :width => 300) %></h2>
       </br>
        
         <ol class="news badnews" start="1">
            <li class='winner'>
            <span class='score_neg'><%=@story_neg_ever.first.mixed%></span>
            <span class='title'><%=@story_neg_ever.first.title.gsub("&apos;","'")%></span>
            <span class='awarddate'><%=@story_neg_ever.first.date.pretty_date%> </span>
            </li>
          <%@story_neg_ever[1..9].each do |s|%>
            <li>
            <span class='score_neg'><%=s.mixed%></span>
            <span class='awardpic_wrapper'>
              <%= image_tag(LOGOS[s.source], :width => 100, :class => 'awardpic ' + s.source.downcase) %>
            </span>
            <span class='headline_and_date'>
              <span class='title'><%=s.title.gsub("&apos;","'")%></span>
              <span class='awarddate'><%=s.date.pretty_date%> </span>
            </span>
            </li>
          <%end%>
        </ol> 
      </div>

      <div id='champion_trophies_ever' class="trophies ever">
        <table>
          <tbody>
            <% @trophies_ever.each do |item|%>
              <tr>
                  <td>
                    <%= image_tag(LOGOS[item[0].titleize], :width => 100, :class => 'awardpic ' + item[0].downcase) %>
                  </td>
                  <% item[1].times do %>
                  <td>
                    <%= image_tag('cup.jpg', :width => '30') %>
                  </td>
                  <% end %>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>

